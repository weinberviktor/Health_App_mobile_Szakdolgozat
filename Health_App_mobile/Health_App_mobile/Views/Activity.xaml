<?xml version="1.0" encoding="utf-8" ?>
<ContentPage x:Class="Health_App_mobile.Views.Activity"
             xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             Padding="10">

    <StackLayout Margin="0,10,0,0"  HorizontalOptions="Center">
        <Label Text="Válaszd ki melyik napon mit ettél"
               FontSize="Large"
               Margin="0, 20"
               HorizontalTextAlignment="Center"/>
        <Label Text="Dátum választó " />

        <DatePicker x:Name="startDatePicker"
                    HorizontalOptions="Center"
                    WidthRequest="110"
                    Format="yyyy//MM/dd"
                    Margin="30, 0, 0, 30"/>
        
        <Label Text="" />
        
        <Entry BackgroundColor="Wheat" 
               HeightRequest="150"
               Placeholder="Írd be mit ettél a mai nap "
               ClearButtonVisibility="WhileEditing"
               x:Name="etel"/>
        
        <Button Text="Rögzités" 
                HorizontalOptions="Center"
                WidthRequest="200"
                BackgroundColor="Blue"
                TextColor="White"
                Clicked="Button_Clicked"/>
        
        <Button Text="Étel törlése" 
                HorizontalOptions="Center"
                WidthRequest="200"
                BackgroundColor="Transparent"
                TextColor="Blue"
                Clicked="Button_Clicked_1"/>
    </StackLayout>

</ContentPage>