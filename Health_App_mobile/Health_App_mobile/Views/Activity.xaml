<?xml version="1.0" encoding="utf-8" ?>
<ContentPage x:Class="Health_App_mobile.Views.Activity"
             xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             Padding="10">

    <ContentPage.Content>
        <CollectionView x:Name="etelek"
                        ItemsSource="{Binding Eteleklista}"
                        
                        >
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    
                    <Grid Padding="10">
                        
                        <StackLayout>
                            <Button Text="Hozzáadás"
                                        HorizontalOptions="EndAndExpand"/>
                        </StackLayout>
                        <StackLayout>
                            <Label Text="{Binding Etelneve}" 
                                   FontSize="Large"/>
                            <Label Text="{Binding Etelemennyiseg}"/>
                            <Label Text="{Binding Etelekaloria}"/>
                            
                        </StackLayout>
                    </Grid>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </ContentPage.Content>
</ContentPage>
